<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youmengna.byr.ReplyArticle"
    android:orientation="vertical">
    <EditText
        android:id="@+id/ReplyArticle_Title"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@null"/>
    <View
        android:layout_below="@+id/ReplyArticle_Title"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"></View>

    <io.github.rockerhieu.emojicon.EmojiconEditText
        android:id="@+id/ReplyArticle_Content"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@null"/>
    <LinearLayout
        android:id="@+id/gridLinear"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <GridView
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform" >
                </GridView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ReplyArticle_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorGray"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ReplyArticle_Expression"
            android:background="@drawable/background_mainboxll_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
           <TextView
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="+表情"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ReplyArticle_Photograph"
            android:background="@drawable/background_mainboxll_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+拍照"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ReplyArticle_Picture"
            android:background="@drawable/background_mainboxll_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+图片"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ReplyArticle_Attachment"
            android:background="@drawable/background_mainboxll_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+附件"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/emojicons"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>
