<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/boardDetailArticleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="16dp"
        android:textColor="@color/bg_main_dark"
        android:text="报考软件学院，同学们请注意！" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/boardDetailArticleDate"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04月24日" />

        <ImageView
            android:id="@+id/boardDetailBelowImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/boardDetailUser"
            android:layout_marginRight="5dp"
            android:src="@drawable/main2_user" />

        <TextView
            android:id="@+id/boardDetailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/boardDetailMsg"
            android:layout_marginRight="30dp"
            android:text="crady" />

        <ImageView
            android:id="@+id/boardDetailMsg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/boardDetailReplyCount"
            android:layout_marginRight="5dp"
            android:src="@drawable/topten_msg" />

        <TextView
            android:id="@+id/boardDetailReplyCount"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="12dp" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>
